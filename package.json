{
	"name": "thymeleaf",
	"version": "0.8.1",
	"description": "A basic implementation of the Thymeleaf templating engine in JavaScript",
	"author": "Emanuel Rabina <emanuelrabina@gmail.com> (http://www.ultraq.net.nz/)",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/ultraq/thymeleaf-js"
	},
	"main": "lib/thymeleaf.node.cjs.js",
	"module": "lib/thymeleaf.node.es.js",
	"browser": {
		"./lib/thymeleaf.node.cjs.js": "./lib/thymeleaf.browser.cjs.js",
		"./lib/thymeleaf.node.es.js": "./lib/thymeleaf.browser.es.js"
	},
	"scripts": {
		"lint": "eslint rollup.config.js browser src test",
		"test": "npm run lint --silent && nyc mocha",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"build": "npm run build:browser --silent && npm run build:node --silent && npm run build:dist --silent",
		"build:browser": "cross-env ENVIRONMENT=browser rollup --config",
		"build:node": "cross-env ENVIRONMENT=node rollup --config",
		"build:dist": "rollup --config rollup.config.dist.js",
		"watch": "chokidar 'src/**/*.js' 'test/**/*.js' -c 'npm test --silent'",
		"prepublish": "npm run build"
	},
	"dependencies": {
		"@ultraq/array-utils": "^1.1.0",
		"@ultraq/object-utils": "^1.1.0",
		"@ultraq/string-utils": "^1.1.0",
		"jsdom": "~9.12.0"
	},
	"devDependencies": {
		"babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
		"babel-register": "^6.24.1",
		"chai": "^3.5.0",
		"chokidar-cli": "^1.2.0",
		"coveralls": "^2.13.0",
		"cross-env": "^5.1.0",
		"eslint": "^3.19.0",
		"eslint-config-ultraq": "^1.0.1",
		"hyperscript": "^2.0.2",
		"hyperscript-helpers": "^3.0.2",
		"jsdom-global": "^2.1.1",
		"mocha": "^3.2.0",
		"nyc": "^10.2.0",
		"object.entries": "^1.0.4",
		"rollup": "^0.50.0",
		"rollup-plugin-commonjs": "^8.0.2",
		"rollup-plugin-node-resolve": "^3.0.0",
		"rollup-plugin-replace": "^2.0.0",
		"rollup-plugin-uglify": "^2.0.1",
		"uglify-es": "^3.1.3"
	},
	"engines": {
		"node": ">=6.5.0"
	}
}
