{
	"name": "thymeleaf",
	"version": "0.5.0",
	"description": "A basic implementation of the Thymeleaf templating engine in JavaScript",
	"author": "Emanuel Rabina <emanuelrabina@gmail.com> (http://www.ultraq.net.nz/)",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/ultraq/thymeleaf-js"
	},
	"main": "dist/thymeleaf.node.js",
	"browser": "dist/thymeleaf.js",
	"module": "src/Thymeleaf.js",
	"scripts": {
		"lint": "eslint rollup.config.js browser src test",
		"test": "npm run lint && nyc mocha",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"build": "npm run build:browser && npm run build:node",
		"build:browser": "TARGET=browser rollup --config && uglifyjs dist/thymeleaf.js --compress --mangle --output dist/thymeleaf.min.js",
		"build:node": "TARGET=node rollup --config",
		"watch": "chokidar 'src/**/*.js' 'test/**/*.js' -c 'npm test'",
		"prepublish": "npm run build"
	},
	"dependencies": {
		"@ultraq/array-utils": "^1.0.0",
		"@ultraq/object-utils": "^1.1.0",
		"@ultraq/string-utils": "^1.1.0",
		"jsdom": "~9.12.0"
	},
	"devDependencies": {
		"babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
		"babel-register": "^6.24.1",
		"chai": "^3.5.0",
		"chokidar-cli": "^1.2.0",
		"coveralls": "^2.13.0",
		"eslint": "^3.19.0",
		"eslint-config-ultraq": "^1.0.1",
		"hyperscript": "^2.0.2",
		"hyperscript-helpers": "^3.0.2",
		"jsdom-global": "^2.1.1",
		"mocha": "^3.2.0",
		"nyc": "^10.2.0",
		"rollup": "^0.41.6",
		"rollup-plugin-alias": "^1.3.1",
		"rollup-plugin-commonjs": "^8.0.2",
		"rollup-plugin-json": "^2.1.1",
		"rollup-plugin-node-resolve": "^3.0.0",
		"uglify-js": "https://github.com/mishoo/UglifyJS2.git#harmony"
	},
	"engines": {
		"node": ">=6.5.0"
	}
}
