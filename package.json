{
	"name": "thymeleaf",
	"version": "0.5.0",
	"description": "A basic implementation of the Thymeleaf templating engine in JavaScript",
	"author": "Emanuel Rabina <emanuelrabina@gmail.com> (http://www.ultraq.net.nz/)",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/ultraq/thymeleaf-js"
	},
	"main": "./lib/Thymeleaf.js",
	"module": "./src/Thymeleaf.js",
	"scripts": {
		"lint": "eslint src test",
		"test": "npm run lint && nyc --include=src/**/*.js --reporter=html mocha --require=test/Scaffolding.js --recursive",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"build": "npm run build:browser && npm run build:node",
		"build:browser": "rollup --config",
		"build:node": "babel src --out-dir lib",
		"watch": "chokidar '**/*.js' -c 'npm test'"
	},
	"dependencies": {
		"bluebird": "~3.5.0",
		"jsdom": "~9.12.0",
		"lodash-es": "~4.17.4"
	},
	"devDependencies": {
		"aws-sign2": "^0.7.0",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
		"babel-register": "^6.24.1",
		"chai": "^3.5.0",
		"chokidar-cli": "^1.2.0",
		"coveralls": "^2.13.0",
		"eslint": "^3.19.0",
		"hyperscript": "^2.0.2",
		"hyperscript-helpers": "^3.0.2",
		"mocha": "^3.2.0",
		"nyc": "^10.2.0",
		"rollup": "^0.41.6",
		"rollup-plugin-commonjs": "^8.0.2",
		"rollup-plugin-ignore": "^1.0.3",
		"rollup-plugin-json": "^2.1.1",
		"rollup-plugin-node-builtins": "^2.1.0",
		"rollup-plugin-node-resolve": "^3.0.0",
		"rollup-plugin-uglify": "^1.0.2",
		"uglify-js": "https://github.com/mishoo/UglifyJS2.git#harmony"
	},
	"engines": {
		"node": ">=6.5.0"
	}
}
