{
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:import/warnings",
		"ultraq"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2017
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"rules": {
		"comma-dangle": ["error", {
			"functions": "never"
		}],
		"no-console": "off",
		"import/order": ["error", {
			"groups": [
				"index",
				"sibling",
				"parent",
				"internal",
				"external",
				"builtin"
			]
		}]
	}
}
